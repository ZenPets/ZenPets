<resources>
    <!-- THE PRIMARY ZEN PETS STYLE -->
    <style name="ZenPets" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_pattern</item>
        <!--<item name="android:windowBackground">@color/app_bg</item>-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- CARD VIEW STYLE -->
        <item name="cardStyle">@style/ZenPetsCards</item>

        <!-- CALLIGRAPHY ATTRIBUTE -->
        <!--<item name="fontPath">fonts/Roboto-Regular.ttf</item>-->

        <!-- POPUP MENU STYLE -->
        <item name="popupMenuStyle">@style/myPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/myPopupMenuStyle</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceSmall
        </item>

        <!-- THE SPARK LINE VIEW STYLE -->
        <!--<item name="spark_SparkViewStyle">@style/MySparkViewStyle</item>-->
    </style>

    <!-- THE SPLASH SCREEN STYLE -->
    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_pattern</item>
        <!--<item name="android:windowBackground">@color/app_bg</item>-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- CALLIGRAPHY ATTRIBUTE -->
        <!--<item name="fontPath">fonts/Roboto-Regular.ttf</item>-->
    </style>

    <!-- THE DIALOG STYLE -->
    <style name="ZenPetsDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_pattern</item>
        <!--<item name="android:windowBackground">@color/app_bg</item>-->
        <item name="colorAccent">@color/accent</item>

        <!-- CALLIGRAPHY ATTRIBUTE -->
        <!--<item name="fontPath">fonts/Roboto-Regular.ttf</item>-->
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <!-- THE DRAWER ARROW TOGGLE STYLE -->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- THE POPUP MENU STYLE -->
    <style name="myPopupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#444444</item>
    </style>

    <!-- THE POPUP MENU APPEARANCE -->
    <style name="myPopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">#D9D9D9</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- CARD VIEW STYLE -->
    <attr name="cardStyle" format="reference" />

    <style name="ZenPetsCards" parent="CardView">
        <item name="cardBackgroundColor">@color/card_bg</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <!-- THE TAB STYLE -->
    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- THE TOOLBAR TITLE STYLE-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- THE TEXT INPUT LAYOUT STYLE -->
    <style name="TextLabel" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <!-- THE NORMAL REGULAR STYLE -->
    <style name="NormalRegular" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- THE NORMAL BOLD STYLE -->
    <style name="NormalBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- THE CONDENSED REGULAR STYLE -->
    <style name="CondensedRegular" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- THE NORMAL BOLD STYLE -->
    <style name="CondensedBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- THE LIGHT NORMAL STYLE -->
    <style name="LightNormal" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- THE LIGHT BOLD STYLE -->
    <style name="LightBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ZenPets.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ZenPets.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- RATING BAR -->
    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/tertiary_text</item>
    </style>

