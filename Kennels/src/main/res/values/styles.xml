        <item name="spark_fill">false</item>

        &lt;!&ndash;<item name="spark_baseLineColor">@color/base_line_color</item>
        <item name="spark_baseLineWidth">@dimen/base_line_width</item>&ndash;&gt;

        <item name="spark_scrubLineColor">@color/primary_dark</item>
        <item name="spark_scrubLineWidth">3dp</item>
        <item name="spark_scrubEnabled">true</item>

        <item name="spark_animateChanges">true</item>
    </style>-->
</resources>