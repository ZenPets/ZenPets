        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linlaPhoneNumber1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="11dp"
                    app:iiv_color="@color/secondary_text"
                    app:iiv_icon="gmd_phone"
                    app:iiv_size="16dp" />

                <TextView
                    android:id="@+id/txtPhoneNumber1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="11dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="5dp"
                    android:text="Phone Number 1"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    app:fontFamily="@font/work_sans_regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linlaPhoneNumber2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="11dp"
                    app:iiv_color="@color/secondary_text"
                    app:iiv_icon="gmd_phone"
                    app:iiv_size="16dp" />

                <TextView
                    android:id="@+id/txtPhoneNumber2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="11dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="5dp"
                    android:text="Phone Number 2"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    app:fontFamily="@font/work_sans_regular" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="start|top"
            android:orientation="horizontal">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="11dp"
                app:iiv_color="@color/secondary_text"
                app:iiv_icon="faw_building"
                app:iiv_size="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtGroomerAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:paddingStart="11dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="8dp"
                    android:text="Groomer's Address"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp"
                    app:fontFamily="@font/work_sans_regular" />

                <com.google.android.gms.maps.MapView
                    android:id="@+id/groomerMap"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:paddingStart="11dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="5dp"
                    app:cameraZoom="18"
                    app:mapType="normal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="top"
            android:orientation="horizontal">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingStart="11dp"
                android:paddingLeft="11dp"
                android:paddingTop="8dp"
                android:paddingEnd="11dp"
                android:paddingRight="11dp"
                android:paddingBottom="8dp"
                app:iiv_color="@color/secondary_text"
                app:iiv_icon="gmd_rate_review"
                app:iiv_size="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:paddingStart="11dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="5dp"
                    android:text="REVIEWS"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp"
                    app:fontFamily="@font/work_sans_medium" />

                <LinearLayout
                    android:id="@+id/linlaReviewsProgress"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:padding="2dp"
                        android:text="@string/loading_message"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        app:fontFamily="@font/work_sans_regular" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/listReviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:cacheColorHint="@android:color/transparent"
                    android:fadingEdge="none"
                    android:persistentDrawingCache="scrolling"
                    android:scrollbars="none"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txtAllReviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="end|center"
                    android:paddingStart="11dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="5dp"
                    android:text="SEE ALL REVIEWS"
                    android:textColor="@color/accent"
                    android:textSize="15sp"
                    app:fontFamily="@font/work_sans_medium" />

                <LinearLayout
                    android:id="@+id/linlaNoReviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="110dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="110dp"
                        android:layout_marginRight="110dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/empty_graphic" />

                    <TextView
                        android:id="@+id/txtEmpty"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:padding="11dp"
                        android:text="There are no reviews for your services yet..."
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        app:fontFamily="@font/work_sans_light" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="top"
            android:orientation="horizontal">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingStart="11dp"
                android:paddingLeft="11dp"
                android:paddingTop="8dp"
                android:paddingEnd="11dp"
                android:paddingRight="11dp"
                android:paddingBottom="8dp"
                app:iiv_color="@color/secondary_text"
                app:iiv_icon="gmd_collections"
                app:iiv_size="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:paddingStart="11dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="5dp"
                    android:text="YOUR SERVICE IMAGES"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp"
                    app:fontFamily="@font/work_sans_medium" />

                <LinearLayout
                    android:id="@+id/linlaImagesProgress"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:padding="2dp"
                        android:text="@string/loading_message"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        app:fontFamily="@font/work_sans_regular" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/listImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:cacheColorHint="@android:color/transparent"
                    android:fadingEdge="none"
                    android:persistentDrawingCache="scrolling"
                    android:scrollbars="none"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/linlaNoImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="110dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="110dp"
                        android:layout_marginRight="110dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/empty_graphic" />

                    <TextView
                        android:id="@+id/txtEmptyImages"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:paddingStart="11dp"
                        android:paddingLeft="11dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="11dp"
                        android:paddingRight="11dp"
                        android:paddingBottom="5dp"
                        android:text="You haven't added any Images for your Grooming services yet..."
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        app:fontFamily="@font/work_sans_light" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtManageImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="end|center"
                    android:paddingStart="11dp"
                    android:paddingLeft="11dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="11dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="5dp"
                    android:text="MANAGE IMAGES"
                    android:textColor="@color/accent"
                    android:textSize="15sp"
                    app:fontFamily="@font/work_sans_medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>