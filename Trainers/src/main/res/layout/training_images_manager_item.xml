<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="160dp">

    <android.support.v7.widget.CardView
        style="@style/ZenPetsCards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:contentPadding="5dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgvwModuleImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:placeholderImage="@drawable/ic_business_black_24dp"
            app:roundedCornerRadius="4dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtModuleImageCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_margin="5dp"
            android:background="#A6000000"
            android:gravity="center"
            android:padding="11dp"
            android:text="Image Caption"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="14sp"
            app:fontFamily="@font/lato_regular" />

        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/imgvwDeleteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:background="#CCDCDCDC"
            android:padding="8dp"
            app:iiv_color="@android:color/secondary_text_light"
            app:iiv_icon="faw_trash"
            app:iiv_size="15dp" />
    </android.support.v7.widget.CardView>
</FrameLayout>