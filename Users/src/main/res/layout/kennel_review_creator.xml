<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/zen_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgvwKennelCoverPhoto"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center|bottom"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            app:placeholderImage="@drawable/ic_business_black_48dp"
            app:roundAsCircle="true"
            app:roundingBorderColor="@color/semiTransparentDark"
            app:roundingBorderWidth="4dp" />

        <TextView
            android:id="@+id/txtKennelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_condensed_bold"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingEnd="11dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingStart="11dp"
            android:paddingTop="5dp"
            android:text="Kennel Name"
            android:textColor="@color/secondary_text"
            android:textSize="15sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbarSize="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="top|center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingEnd="11dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingStart="11dp"
                android:paddingTop="5dp"
                android:text="Would you recommend this Kennel to family and friends?"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_condensed_bold" />

            <RadioGroup
                android:id="@+id/rdgRecommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="start|center"
                android:maxLines="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btnYes"
                    style="@style/LightBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="0dp"
                    android:checked="true"
                    android:padding="11dp"
                    android:text="@string/review_creator_recommend_yes"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/btnNo"
                    style="@style/LightBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginEnd="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="5dp"
                    android:checked="false"
                    android:padding="11dp"
                    android:text="@string/review_creator_recommend_no"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="11dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingStart="11dp"
                android:paddingTop="5dp"
                android:text="How would rate this Kennel?"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_condensed_bold" />

            <RatingBar
                android:id="@+id/ratingKennel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:numStars="5"
                android:progressDrawable="@drawable/zen_ratings"
                android:rating="0"
                android:stepSize="1" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColorHint="@android:color/tertiary_text_light"
                app:hintTextAppearance="@style/TextLabel">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:hint="How was your experience with this Kennel?"
                    android:inputType="textCapSentences|textMultiLine"
                    android:lines="6"
                    android:maxLines="11"
                    android:minLines="6"
                    android:padding="11dp"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="14sp"
                    app:fontFamily="@font/roboto_condensed_regular" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txtTermsOfService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="6dp"
        android:text="@string/review_creator_terms"
        android:textColor="@color/primary_text"
        android:textColorLink="@android:color/holo_red_dark"
        android:textSize="12sp"
        app:fontFamily="@font/roboto_condensed_light" />
</LinearLayout>