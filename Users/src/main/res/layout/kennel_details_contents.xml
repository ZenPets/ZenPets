        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="top"
            android:orientation="horizontal">

            <com.mikepenz.iconics.view.IconicsImageView
